<div class="container">
  <div class="row text-center">
    <div class="col-md-3 bg-light">
      <h2>新規映画登録</h2>
    </div>
  </div>

  <%= form_with(model: @movie, url: admin_movie_path(@movie.id)) do |f| %>
  <h5>
    <table style = "width:1000px; margin:30px;">
      <tbody class= "border-bottom border-info">
        <tr>
          <td>
            <h4>
              タイトル<%= f.text_field :title, style: "margin-left:30px;" %>
            </h4>
          </td>
        </tr>
        <tr>
          <td>
            <h5>
              上映日<%= f.text_field :day, style: "margin-left:66px;"  %>
            </h5>
            <h5>
              製作国<%= f.text_field :country, style: "margin-left:66px;"  %>
            </h5>
            <h5>
              上映時間<%= f.text_field :time, style: "margin-left:46px;"  %>
            </h5>
            <h5>
            あらすじ<%= f.text_area :body, style: "margin-left:46px;"  %>
            </h5>
          </td>
        </td>
      </tbody>
    </table>
    <%= f.submit '投稿' %>
  </h5>
  <% end %>
</div>